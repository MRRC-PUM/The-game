<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bartek.shipswar.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ShipsWar"
        android:gravity="center"
        android:textSize="50dp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Graj"
        android:textSize="20dp"
        android:id="@+id/buttonGraj"
        android:onClick="onClickButtonGraj"
        />

    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Opcje"
        android:textSize="20dp"
        android:id="@+id/buttonOpcje"
        android:onClick="onClickButtonOpcje"
        />

    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Statystyki"
        android:textSize="20dp"
        android:id="@+id/buttonStatystyki"
        android:onClick="onClickButtonStatystyki"
        />

    <Button
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="WyjÅ›cie"
        android:textSize="20dp"
        android:id="@+id/buttonWyjscie"
        android:onClick="onClickButtonWyjscie"
        />


</LinearLayout>
